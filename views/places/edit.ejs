<% include ../partials/header %>
<h1>Edit <%=place.address%></h1>


<form action="/places/<%= place.id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="address">Address: </label>
    <input type="text" class="form-control" name="place[address]" id="address" value="<%=place.address%>"autofocus>
  </div>
  <div class="form-group">
    <label for="description">Description: </label>
    <input type="text" class="form-control" name="place[body]" id="description" value="<%=place.body%>"autofocus>
  </div>
  <input type="submit" value="Save" class="btn btn-lg btn-success">
</form>


<form action="/places/<%= place.id%>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="btn btn-danger">
</form>
<% include ../partials/footer %>